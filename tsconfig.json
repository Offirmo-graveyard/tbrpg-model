{
	"compileOnSave": false,
	"compilerOptions": {
		"listFiles": true,
		"pretty": true,
		"locale": "fr",

		"moduleResolution": "node",
		"allowJs": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"strictNullChecks": true,

		"target": "es6",
		"noEmitOnError": true,
		"newLine": "lf",
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist/es6"
	},
	"files": [
		"node_modules/@types/node/index.d.ts",
		"src/index.ts",
		"src/utils/static-data-loader.ts",
		"src/armor-component/index.ts",
		"src/armor-component/spec.ts",
		"src/armor-component/types.ts",
		"src/weapon-component/index.ts",
		"src/weapon-component/spec.ts",
		"src/weapon-component/types.ts"
	],
	"exclude": [
		"dist",
		"node_modules",
		"scripts",
		"test",
		"tosort"
	]
}
