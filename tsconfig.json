{
	"compileOnSave": false,
	"compilerOptions": {
		"listFiles": true,
		"pretty": true,
		"locale": "fr",

		"moduleResolution": "node",
		"allowJs": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"strictNullChecks": true,

		"target": "es6",
		"noEmitOnError": true,
		"newLine": "lf",
		"declaration": true,
		"sourceMap": true,
		"outDir": "dist/es6"
	},
	"files": [
		"node_modules/@types/node/index.d.ts",
		"typings-custom/unit-tests-global-variables.d.ts",
		"src/db/index.ts",
		"src/db/types.ts",
		"src/mechanics/index.ts",
		"src/mechanics/types.ts",
		"incubator/json-schema-based-model/get_unique_key.ts",
		"incubator/json-schema-based-model/index.spec.ts",
		"incubator/json-schema-based-model/index.ts",
		"incubator/json-schema-based-model/types.ts",
		"src/weapon/index.ts",
		"src/weapon/types.ts",
		"src/weapon_component/index.ts",
		"src/weapon_component/types.ts",
		"src/index.ts"
	],
	"exclude": [
		"dist",
		"node_modules",
		"scripts",
		"test",
		"tosort"
	]
}
